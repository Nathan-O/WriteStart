			<div class="col-md-4">
				<div class="panel panel-success">
					<div class="panel-heading">
						<h3>New File</h3>
					</div>
					<div class="panel-body">		<!-- FORM HERE -->
						<!-- <form method="POST"  action="/submissions"> -->
						<form id="addNewFile">
							<div class="form-group">
								<input type="text" class="form-control" name="submission[title]" placeholder="Title" id="named">
							</div>

							<div class="form-group">
								<select class="form-control selectpicker show-tick" multiple title="Choose Genres that Apply" name="submission[genre]" id="genre-pick">
									<optgroup label="Genre">
										<option value="Horror">Horror</option>
										<option value="Science Fiction">Science Fiction</option>
										<option value="Thriller">Thriller</option>
										<option value="Mystery">Mystery</option>
									</optgroup>
								</select>
							</div>

							<div class="form-group">
								<textarea id="submitted" name="submission[content]" placeholder="Paste story body here."></textarea>
							</div>

							<button class="btn btn-default btn-sm" type="submit">Add File</button>
						</form>
					</div>
				</div>
			</div>


			<!-- TEST SECTION -->
