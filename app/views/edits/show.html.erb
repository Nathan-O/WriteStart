<div class="wrapper">

   <header>
      <div class="page-header">
         <h1><%= @submission.title %> <small>Edits</small></h1>
         <h2><small>Written by: <%= @author.first_name %> <%= @author.last_name[0] %>.</small></h2>
         <h2><small>Edited by: <%= @editor.first_name %> <%= @editor.last_name[0] %>.</small></h2>
      </div>
   </header>

   <div class="col-md-8 col-md-offset-2">
      <p> Genre: <%= @submission.genre %> </p>
      <% line_edits = simple_format(@edit.line_edits) %>
      <p> <%= line_edits %> </p>
      <% notes = simple_format(@edit.notes) %>
      <p>Notes: <%= notes %> </p>
   </div>
</div>
